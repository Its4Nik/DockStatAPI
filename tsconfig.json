{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2020",
    "outDir": "dist/src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": ["src/**/*", "**/*.d.ts", "__tests__/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
