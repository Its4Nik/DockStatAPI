{
  "name": "dockstatapi",
  "version": "2",
  "description": "API for docker hosts using dockerode",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "start": "node ./src/server.ts",
    "dev": "nodemon ./src/server.ts",
    "offline": "OFFLINE=true nodemon ./src/server.ts",
    "dep": "bash ./src/utils/createDependencyGraph.sh",
    "dep:remove": "bash ./src/utils/removeUnusedDeps.sh && bash ./src/utils/createDependencyGraph.sh"
  },
  "keywords": [],
  "author": "Its4Nik",
  "license": "BSD 3-Clause License",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dockerode": "^4.0.2",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.16",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/express-handlebars": "^5.3.1",
    "@types/node": "^22.9.0",
    "dependency-cruiser": "^16.5.0",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/logs/**",
      "**/data/**"
    ],
    "delay": 2500
  }
}
